<h1>Personal Militar</h1>

<table>
  <thead>
    <tr>
      <th>Nombres</th>
      <th>Apellidos</th>
      <th>Fecha nacimiento</th>
      <th>Sexo</th>
      <th>Unidad</th>
      <th>Cuartel</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @personal.each do |personal| %>
      <tr>
        <td><%= personal.nombres %></td>
        <td><%= personal.apellidos %></td>
        <td><%= personal.fecha_nacimiento %></td>
        <td><%= personal.get_sexo %></td>
        <td><%= personal.unidad.nombre %></td>
        <td><%= personal.cuartel.nombre %></td>
        <td><%= link_to 'Ver', personal %></td>
        <td><%= link_to 'Editar', edit_personal_path(personal) %></td>
        <td><%= link_to 'Eliminar', personal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

