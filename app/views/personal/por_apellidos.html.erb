<h1>Personal por Apellidos: </h1>
<div class="btn-group btn-group-justified">

	<% ('A'..'Z').each do |letra| %>
	<%= link_to "#{letra}", por_apellidos_path("#{letra}"), class: 'btn btn-default' %>
	<% end %>
</div>
<hr>



<table class="table table-responsive table-striped">
  <thead>
    <tr>
      <th>Apellidos y Nombres</th>
      <th>Carnet Militar</th>
      <th>Unidad</th>
      <th>Cuartel</th>
    </tr>
  </thead>

  <tbody>
    <% @personal.each do |personal| %>
      <tr>
        <td><%= link_to personal.get_apellidos_nombres , por_apellidos_show_path(params[:inicial], personal.id) %></td>
        <td><%= personal.nro_carnet_militar %></td>
        <td><%= personal.unidad.nombre %></td>
        <td><%= personal.cuartel.nombre %></td>
      </tr>
    <% end %>
  </tbody>
</table>
